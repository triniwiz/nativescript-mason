<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- ON state (pressed/dragging) - green inner -->
  <item android:state_pressed="true">
    <layer-list>
      <item>
        <shape android:shape="oval">
          <size android:width="18dp" android:height="18dp"/>
          <solid android:color="#FFFFFF"/>
          <stroke android:width="1dp" android:color="#8E8E93"/>
        </shape>
      </item>
      <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
          <solid android:color="#34C759"/>
        </shape>
      </item>
    </layer-list>
  </item>

  <!-- OFF state (default) - darker gray inner -->
  <item>
    <layer-list>
      <item>
        <shape android:shape="oval">
          <size android:width="18dp" android:height="18dp"/>
          <solid android:color="#FFFFFF"/>
          <stroke android:width="1dp" android:color="#8E8E93"/>
        </shape>
      </item>
      <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
          <solid android:color="#636366"/>
        </shape>
      </item>
    </layer-list>
  </item>
</selector>
