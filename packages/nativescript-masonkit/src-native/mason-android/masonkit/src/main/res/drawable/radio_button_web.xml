<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Checked + Pressed state -->
  <item android:state_checked="true" android:state_pressed="true">
    <layer-list>
      <!-- Outer white circle with system gray border -->
      <item>
        <shape android:shape="oval">
          <size android:width="22dp" android:height="22dp" />
          <solid android:color="#FFFFFF" />
          <stroke android:width="1dp" android:color="#8E8E93" />
        </shape>
      </item>
      <!-- Inner darker green circle -->
      <item android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp">
        <shape android:shape="oval">
          <solid android:color="#388E3C" />
        </shape>
      </item>
    </layer-list>
  </item>

  <!-- Checked state -->
  <item android:state_checked="true">
    <layer-list>
      <!-- Outer white circle with system gray border -->
      <item>
        <shape android:shape="oval">
          <size android:width="18dp" android:height="18dp" />
          <solid android:color="#FFFFFF" />
          <stroke android:width="1dp" android:color="#8E8E93" />
        </shape>
      </item>
      <!-- Inner green circle -->
      <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
        <shape android:shape="oval">
          <solid android:color="#4CAF50" />
        </shape>
      </item>
    </layer-list>
  </item>

  <!-- Unchecked + Pressed state -->
  <item android:state_pressed="true">
    <layer-list>
      <!-- Outer white circle with system gray border -->
      <item>
        <shape android:shape="oval">
          <size android:width="22dp" android:height="22dp" />
          <solid android:color="#FFFFFF" />
          <stroke android:width="1dp" android:color="#8E8E93" />
        </shape>
      </item>
      <!-- Inner darker gray circle -->
      <item android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp">
        <shape android:shape="oval">
          <solid android:color="#636366" />
        </shape>
      </item>
    </layer-list>
  </item>

  <!-- Default unchecked state -->
  <item>
    <layer-list>
      <!-- Outer white circle with system gray border -->
      <item>
        <shape android:shape="oval">
          <size android:width="18dp" android:height="18dp" />
<!--          <solid android:color="#FFFFFF" />-->
          <stroke android:width="1dp" android:color="#8E8E93" />
        </shape>
      </item>
      <!-- Inner darker gray circle -->
<!--      <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">-->
<!--        <shape android:shape="oval">-->
<!--          <solid android:color="#636366" />-->
<!--        </shape>-->
<!--      </item>-->
    </layer-list>
  </item>
</selector>
